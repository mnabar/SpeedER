doctype html
html
head 
  include ./partials/head.pug
  style(type='text/css').
    html, body {
      height: 100%;
      background: #E3EBF6;
    }
    .flex-parent {
      height: 100%;
      display: flex;
    }
    .flex-child {
      margin: auto;
    }
    p {
      margin-bottom: 50px;
    }
    .btn-return, .btn-return:hover {
      background-color: #99ccff;
    }
body(style='font-family:Lato; text-align:center')
  .container.flex-parent
    .flex-child 
      .row 
        h1 Congratulations, you have signed up!
      .row 
        p Please navigate to the homepage to access your SpeedER profile! 
        form(action="/hospitalLogin", method="GET")
          button.btn.btn-default.btn-return(type="submit") Return to Homepage and Sign In
